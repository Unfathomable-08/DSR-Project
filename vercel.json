{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build"
        },
        {
            "src": "api/manage.py", 
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.13"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/manage.py"
        },
        {
            "src": "/(.*\\.(js|css|svg|png|jpg|jpeg|gif|webp|ico|json|woff|woff2|ttf|otf))",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}